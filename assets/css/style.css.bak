body {
    font-family: 'Roboto', sans-serif;
    line-height: 1.6;
    margin: 0;
    padding: 0;
    color: #333;
}

h1, h2, h3, h4 {
    font-family: 'Playfair Display', serif;
    font-weight: 700;
}

header {
    background: rgb(35, 35, 35);
    color: #fff;
    padding: 15px 0;
    position: sticky;
    top: 0;
    z-index: 100;
}

nav ul {
    list-style: none;
    text-align: center;
    padding: 0;
    margin: 0;
}

nav ul li {
    display: inline;
    margin: 0 20px;
}

nav ul li a {
    color: rgb(247, 160, 21);
    text-decoration: none;
    font-weight: bold;
    font-size: 1.1em;
    transition: color 0.3s;
    font-family: 'Playfair Display', serif;
}

nav ul li a:hover {
    color: #fff;
}

.hero {
  height: 100vh;
  background-image: url("../img/pizza.jpg");
  background-size: cover;
  background-position: center;
  position: relative;
}

.hero-content {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	color: white;
	text-align: center;
	padding: 20px;
	border-radius: 10px;
}

.hero-content h1 {
  font-size: 48px;
  margin-bottom: 10px;
}

.hero-content p {
  font-size: 18px;
  margin-bottom: 20px;
}

.btn {
  background-color: #ffb400;
  color: black;
  padding: 12px 24px;
  text-decoration: none;
  font-weight: bold;
  border-radius: 5px;
}

.cardapio {
  padding: 60px 20px;
  background-color: #f5f5f5;
  text-align: center;
}

.cardapio h2 {
  font-size: 32px;
  margin-bottom: 40px;
}

.menu-grid {
  display: flex;
  justify-content: center;
  gap: 30px;
  flex-wrap: wrap;
}

.card {
  background-color: white;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  overflow: hidden;
  width: 300px;
  text-align: left;
  transition: transform 0.3s;
}

.card:hover {
  transform: scale(1.03);
}

.card img {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.card-content {
  padding: 15px;
}

.card-content h3 {
  font-size: 18px;
  margin-bottom: 10px;
}

.card-content p {
  font-size: 14px;
  color: #333;
}

.sobre-nos {
  background-image: url("../img/pizza2.jpg");
  background-size: cover;
  background-position: center;
  color: white;
  text-align: center;
  padding: 80px 20px;
  position: relative;
}

.sobre-nos .hero-content {
  padding: 40px;
  border-radius: 10px;
}

.info-grid {
  display: flex;
  justify-content: center;
  gap: 40px;
  flex-wrap: wrap;
  max-width: 1000px;
  margin: 30px auto 0;
  text-align: left;
}

.info-grid .coluna {
  flex: 1 1 250px;
  min-width: 250px;
  font-size: 15px;
  line-height: 1.6;
}


.sobre-nos h2 {
  font-size: 32px;
  margin-bottom: 20px;
}

.sobre-nos p {
  font-size: 18px;
}

.contato {
  padding: 60px 20px;
  background-color: #fff;
  text-align: center;
}

.contato h2 {
  font-size: 32px;
  margin-bottom: 10px;
}

.contato p {
  font-size: 16px;
  margin-bottom: 20px;
}

.contato .info {
  font-size: 15px;
  max-width: 600px;
  margin: 0 auto;
  text-align: left;
  line-height: 1.6;
}

.contato a {
  color: #ffb400;
  text-decoration: none;
}

footer {
  background-color: #1a1a1a;
  color: white;
  text-align: center;
  padding: 15px 0;
  font-size: 14px;
}